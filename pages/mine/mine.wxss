/* pages/mine/mine.wxss */
.mine {}

.mine-img {
    width: 100%;
    height: 300rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    border-bottom-left-radius: 28rpx;
    border-bottom-right-radius: 28rpx;
}

.mine-top {
    position: absolute;
    left: 0;
    right: 0;
    top: 48rpx;
}

.mine-logo {
    width: 64rpx;
    height: 64rpx;
}

.userinfo-avatar {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
    border-radius: 50%;
    background-size: cover;
    background-color: white;
}

.userinfo-avatar[size] {
    width: 100rpx;
}

.userinfo-avatar:after {
    border: none;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #fff;
    margin-left: 10px;
    text-align: center;
}

.mine-bottom {
    padding: 20rpx;
    margin: 20rpx;
    border: 2rpx solid #f3f3f3;
    background: #fff;
    border-radius: 12rpx;
    position: absolute;
    top: 240rpx;
    bottom: 0;
    left: 0;
    right: 0;
    overflow-x: hidden;
    overflow-y: scroll;
}

.item-tab {
    display: inline-block;
    color: #6a696a;
    font-size: 32rpx;
    line-height: 76rpx;
    margin-right: 30rpx;
}

.selected-item {
    color: #1b1b1b;
    font-weight: 450;
    border-bottom: 4rpx solid #5693f7;
}

.tab-main {
    padding: 20rpx;

}

.zanwu-img {
    width: 200rpx;
    height: 200rpx;
}